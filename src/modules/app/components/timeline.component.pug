div.timeline(*ngIf="result.length > 0")
  table
    tr
      th Time
      td(*ngFor="let time of timeLabel")
        span {{time}}
    tr
      th Events
      td.timeline-events(*ngFor="let set of events")
        div(*ngFor="let literal of set")
          span &bull; {{literal}}
    tr
      th Actions
      td.timeline-actions(*ngFor="let set of actions")
        div(*ngFor="let literal of set")
          span &bull; {{literal}}
    tr
      th Fluents
      td.timeline-fluents(*ngFor="let set of fluents; let i = index")
        div([ngStyle]="{'height.px': overlappingFluents[i] * 22}")
        div(*ngFor="let literal of set")
          div.timeline-fluent-box([ngStyle]="{'width.px': literal.length * 216 - 2}") {{literal.term}}
